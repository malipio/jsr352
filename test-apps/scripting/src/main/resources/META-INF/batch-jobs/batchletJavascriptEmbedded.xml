<job id="batchletJavascriptEmbedded" xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
    <step id="batchletJavascriptEmbedded.step1">
        <batchlet>
            <properties>
                <property name="message" value="Message from batchletJavascriptEmbedded"/>
                <property name="jobId" value="batchletJavascriptEmbedded"/>
            </properties>
            <script type="javascript">
                        function stop() {
                            println("In stop function");
                        }

                        //access built-in variables: jobContext, stepContext and batchProperties
                        function process() {
                            println('jobName: ' + jobContext.getJobName());
                            println('stepName: ' + stepContext.getStepName());
                            println('message: ' + batchProperties.get('message'));
                        }
            </script>
        </batchlet>
    </step>
</job>
